
<div class="card">
	<div class="card-block">
		<h6 class="card-title"><%= photo.username %></h6>
		<p class="card-subtitle text-muted"><%= photo.likes_count %> likes</p>
	</div>
  <%= image_tag(photo.url, class: "card-img") %>
	<div class="card-block">
	    <p class="card-text"><%= photo.caption %></p>
      <%= form_tag [photo, :comments]  do %>
        <%= text_field_tag :content %>
        <%= submit_tag "enter comment" %>
      <% end %>
    </div>
  </div>
</div>
